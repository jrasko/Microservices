type Query {
  allOrders: [Order!]!
  order(id: ID!): Order!
}

scalar SWTime
type Order{
  id: ID!
  time: SWTime!
  state: OrderState!
  shopID: ID!
  customerID: ID!
  products: [OrderProducts!]!
}

type OrderProducts{
  order: Order!
  productId: ID!
  quantity: Int!
  price: Float!
}

enum OrderState{
  ACCEPTED
  IN_PROGRESS
  DONE
  READY_FOR_PICK_UP
  RETRIEVED
}
